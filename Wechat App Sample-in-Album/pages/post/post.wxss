}

.sub3 {
  margin-left: 260rpx;
}

.container {
  height: auto;
  width: 100%;
}

.content {
  width: 100%;
  height: 390px;
  margin-top: 20rpx;
  border-top: 2px solid rgba(0, 0, 0, 0.192);
  border-bottom: 2px solid rgba(0, 0, 0, 0.192);
  border-radius: 5px;
}

.profilearea {
  width: 100%;
  height: 50px;
  padding-top: 25rpx;
  padding-left: 25rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.profilearea text {
  font-size: 35rpx;
  position: absolute;
  bottom: 20rpx;
  margin-left: 30rpx;
}

.profilearea image {
  width: 50px;
  height: 50px;
}

.pic {
  width: 100%;
  height: 200px;
}

.pic image {
  width: 100%;
  height: 200px;
}

.content-text {
  width: 95%;
  height: 50px;
  margin-top: 20rpx;
  margin-left: 30rpx;
  position: relative;
}

.content-text text {
  font-size: 15px;
  color: grey;
  text-align: left;
}

.favorite {
  font-size: 15px;
  position: absolute;
