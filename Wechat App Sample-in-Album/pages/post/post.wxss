  position: relative;
}

.Floating-window {
  position: absolute;
  bottom: 40rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #ffff;
  font-size: 25px;
}

.sub1 {
  margin-left: 230rpx;
}

.sub2 {
